<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="15dp" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/background"
        android:text="Long pressing on a certain note (on the left side of the screen) will copy it to the clipboard and prompt whether you would like to delete it or not if it is incomplete. A completed note will be deleted without prompting you.
        \nIf you long press a note on the right side, you can move the note from one position to another.
        \nThe next day you open the app, all the incomplete notes from the previous day will get carried over to today.
        \nSwiping on the screen can help you switch between days and months (if you are on the list of days screen)."
        android:textColor="@color/foreground" />

    <Button
        android:id="@+id/helpNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Next" />
    
    <Button
        android:id="@+id/helpPrevBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Prev" />

</RelativeLayout>
</ScrollView>
</LinearLayout>